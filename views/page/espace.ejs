                        <optgroup label="BTS">
                        <option value="Science Politique">Science Politique</option>
                        <option value="Journalisme">Journalisme</option>
                        <option value="Science Economique">Science Economique</option>
                        <option value="Droit">Droit</option>
                        </optgroup>
                      </select>
            </div>
            <div class="form-group">
                <select name='classe' class=" input-lg form-control">
                    <option value="1er annee">1er Annee</option>
                    <option value="2eme annee">2eme Annee</option>
